{
    "name": "Max-Verstappen",
    "build": {
      "dockerfile": "Dockerfile",  // Path to your existing Dockerfile
      "context": ".."             // Project root as build context
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "ms-python.python",         // Example: Python extension
      "dbaeumer.vscode-eslint"    // Add other extensions you need
    ], // Ports to expose
    "remoteUser": "root"        // User inside container
  }